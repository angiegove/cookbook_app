<%= form_for @recipe do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :serving_size %>
    <%= f.text_field :serving_size %>
  </p>
  <input type="text" name="q" id="query" />

<!--MEASUREMENTS HEEEEEEEEEELP   <p>
    < %= f.label :amount %>
