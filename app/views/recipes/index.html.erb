<h1>All Recipes?</h1>


<% @recipes.each do |recipe| %>
  <ol>
    <h2><%= link_to recipe.title, recipe_path(recipe.id) %></h2>
    <ul>
      <li>Duration: <%= recipe.duration %></li>
      <li>Servings: <%= recipe.serving_size %></li>
    </ul>
    <div><%= image_tag recipe.image, :class => 'recipe' %></div>
  </ol>
<% end %>