<h1>Cookbooks</h1>


<h2><%= @cookbook.title %> </h2>

<p>Description: <%= @cookbook.description %></p>

<!-- Need to change the routes so edit so doesnt need to go to a new page, can use the new form -->
<%= link_to 'Edit Cookbook', edit_cookbook_path %>

<%= link_to 'View the template of this Cookbook', cookbook_template_path %>
<%= button_to 'Delete Cookbook', cookbook_path(@cookbook.id), :method => 'delete' %>

<h2>Recipes</h2>
<% @recipes.each do |recipe|%>
<li><%= link_to recipe.title, recipe_path(recipe) %></li>
<% end %>

