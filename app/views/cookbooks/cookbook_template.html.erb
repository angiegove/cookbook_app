<div class="fullscreen"></div>
  <div class='cookbook_pdf'>
  <h1>Cookbooks</h1>

  <h1><%= @cookbook.title %> </h2>

  <p>Description: <%= @cookbook.description %></p>


  <h1>Recipes</h2>
  <% @recipes.each do |recipe|%>
    <div class="break"></div>
    <div class='recipe_pdf'>

      <h2><%= recipe.title %> </h2>
      <p>Duration: <%= recipe.duration %></p>
      <p>Servings: <%= recipe.serving_size %></p>
      <div><%= image_tag recipe.image, :class => 'image_pdf' %></div>

      <h2>Ingredients:</h2>
        <ul>
          <% recipe.recipe_ingredients.each do |ingredient| %>
            <li><%= ingredient.ingredient.name %></li>
          <% end %>
        </ul>
      </p>

      <p><%= recipe.instructions %></p>

      <p>Comments: <%= recipe.comment %></p>
    </div>
  <% end %>

</div>

