<div class="new_user_form">
  <%= form_for @user, :html => {:multipart => true} do |f| %>

    <div class='form-group'>
      <i class="fa fa-user"></i>
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, :required => 'required' %>
    </div>
    <div class='form-group'>
      <i class="fa fa-envelope"></i>
      <%= f.label :email %>
      <%= f.text_field :email, :required => 'required' %>
    </div>

    <div class="user_edit_img"><%= image_tag @user.image_url if @user.image? %></div>

    <div class='form-group'>
      <i class="fa fa-camera"></i>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
<!--           <div class='form-group'>
      < %= f.label :remote_image_url, "Or Picture Url" %>
      < %= f.text_field :remote_image_url, :class => 'form-control' %>
    </div>
-->
    <div class='form-group'>
      <i class="fa fa-key"></i>
      <%= f.label :password %>
      <%= f.password_field :password, :required => 'required' %>
    </div>
    <div class='form-group'>
      <i class="fa fa-key"></i>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :required => 'required' %>
    </div>

    <button class="general_submit_button">
      <i class="fa fa-plus"></i>
        <% if @user.persisted? %>
          Edit Account
        <% else %>
          Sign Up
        <% end %>
    </button>


  </div>
<% end %>

